{
  "name": "serenity/serenity",
  "type": "project",
  "description": "The Serenity Zen PHP Framework.",
  "keywords": [
    "framework",
    "serenity"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.2",
    "laravel/framework": "^10.0",
    "laravel/octane": "^1.4",
    "laravel/sanctum": "^3.2",
    "laravel/tinker": "^2.8",
    "serenity/foundation": "^1.0",
    "spiral/roadrunner": "^2.12"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9.1",
    "jetstreamlabs/pinte": "^1.0",
    "laravel/sail": "^1.18",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^6.4",
    "pestphp/pest": "^1.22",
    "pestphp/pest-plugin-laravel": "^1.2",
    "spatie/laravel-ignition": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php lotus package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php lotus vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php lotus key:generate --ansi"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
