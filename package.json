{
  "private": true,
  "scripts": {
    "dev": "vite && npm run octane",
    "thin": "vite",
    "prod": "vite build && vite build --ssr",
    "ssr": "vite build --ssr",
    "start": "node public/ssr/ssr.mjs",
    "kill": "kill -9 $(lsof -ti:5174)",
    "lint": "php ./vendor/bin/pinte --dirty",
    "octane": "php lotus octane:start --watch",
    "queue:start": "pm2 start horizon.json",
    "tests": "php ./vendor/bin/pest",
    "pinte": "php ./vendor/bin/pinte",
    "coverage": "XDEBUG_MODE=coverage php lotus test --coverage --min=80",
    "cn": "composer update && npm update"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "task",
          "refactor",
          "docs",
          "chore"
        ]
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@protonemedia/laravel-splade": "^1.2.15",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "husky": "^8.0.3",
    "laravel-vite-plugin": "^0.7.4",
    "lodash": "^4.17.21",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "semantic-release": "^20.1.1",
    "tailwindcss": "^3.2.7",
    "vite": "^4.1.4",
    "vue": "^3.2.47"
  },
  "overrides": {
    "@semantic-release/npm": {
      "npm": "^9.4.1"
    }
  }
}
